{% macro codeSnippet(params) %}
  {% if params.code %}
    <div class="app-code-snippet">
      <pre><code class="govuk-body-s">
        {%- if params.isSafe -%}
          {{- params.code | safe -}}
        {%- else -%}
          {{- params.code -}}
        {%- endif -%}
      </code></pre>
    </div>
  {% endif %}
{% endmacro %}
